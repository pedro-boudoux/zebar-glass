{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.1.0/resources/widget-schema.json",
  "htmlPath": "./with-glazewm.html",
  "zOrder": "top_most",
  "shownInTaskbar": false,
  "focused": false,
  "resizable": false,
  "transparent": true,
  "acceptsInput": true,
  
  "presets": [
    {
      "name": "default",
      "anchor": "top_center",
      "offsetX": "0",
      "offsetY": "6px",
      "width": "2548px",
      "height": "40px",
      "acceptsInput": true,
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": false,
        "edge": null,
        "windowMargin": "0px"
      },
      "defaultPlacements": [
        {
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "40px"
        }
      ]
    }
  ]
}